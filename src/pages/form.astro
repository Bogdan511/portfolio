---
import BaseLayout from "../layouts/BaseLayout.astro";


---
<BaseLayout>
<main>
    <section class="form">
        <div class="container">
            <form name="Обратная связь" netlify>
                <input type="text" name="Имя" placeholder="Имя" required>
                <input type="tel" name="Телефон" placeholder="Телефон" required>
                <button class="button" type="submit">Отправить</button>
            
            </form>
        </div>
       
    </section>
</main>
</BaseLayout>

<style>
    section {
        padding-block: 4rem;
    }
    form {
        background-color: rgb(10, 10, 10);
        display: flex;
        flex-direction: column;
        padding: 3rem;
        align-items: center;
        width: fit-content;
        margin-inline: auto;
        gap: 1rem;
        box-shadow: 0.4em 0.4em var(--c-shadow) ;
    }
    input  {
        line-height: 2.5;
        padding-inline: 1rem;
        border-radius: 1em;
    }
</style>