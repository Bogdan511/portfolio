---
import octangle from "../img/background/advantages_bg_2.svg"
import circle from "../img/background/advantages_bg_1.svg"
import { Image } from "astro:assets"
---

<section id="advantages">
    <div class="container">
        <div class="decoration">
            <Image class="octangle" src={octangle} alt="octangle"/>
            <Image class="circle" src={circle} alt="circle"/>
        </div>
        <h2>Почему мы хороши</h2>
        <div class="cards">
            <div class="card">
                <h3>В дизайне</h3>
                <ul>
                    <li>Опытная команда дизайнеров</li>
                    <li>Внимание к деталям</li>
                    <li>Фильтрация идей</li>
                </ul>
            </div>
            <div class="card">
                <h3>В разработке</h3>
                <ul>
                    <li>Опытная команда дизайнеров</li>
                    <li>Внимание к деталям</li>
                    <li>Фильтрация идей</li>
                </ul>
            </div>
            <div class="card">
                <h3>В поддержке</h3>
                <ul>
                    <li>Опытная команда дизайнеров</li>
                    <li>Внимание к деталям</li>
                    <li>Фильтрация идей</li>
                </ul>
            </div>
            
        </div>
        
       
    </div>
</section>

<style>
    section {
        padding-block: 80px;
    }
    h2 {
        text-align: center;
    }
    
    .cards {
        padding-inline: 30px;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }
    .card {
        border:medium solid  var(--c-gradient2) ;
        max-width: 500px;
        width: 100%;
        box-shadow:5px 5px 1px var(--c-gradient1) ;
        padding: 15px;
        border-radius: 5px;
        background-color: white;
    }
    .card:nth-child(2n+1) {
        align-self: flex-start;
    }
    .card:nth-child(2n) {
        align-self: flex-end;
    }
    .card:nth-child(3) {
        margin-left: 10px;
    }
    ul {
        padding-inline-start: 20px;
        list-style-type: circle;
    }
    .container {
        position: relative;
        z-index: 0;
    }
    .decoration {
        position: absolute;
        inset: 0px -190px;
        z-index: -1;
        
    }
    .octangle {
        width: 250px;
        height: auto;
        position: sticky;
        top: 80px;
        left: 0;
    }
    .circle {
        position: absolute;
        width: 400px;
        height: auto;
        right: 0;
        bottom: 0;
    }

</style>