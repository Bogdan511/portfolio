---
import ServicesCard from "../components/ServicesCard.astro";
import designImg from "../img/icons/design.svg";
import devImg from "../img/icons/development.svg";
import supportImg from "../img/icons/support.svg";
---

<section id="services">
  <div class="container">
    <h2>Наши основные услуги</h2>
    <div class="cards-block">
      <ServicesCard
        src={designImg.src}
        alt="designLogo"
        title="Дизайн сайта"
        text="Cоздание дизайн-макета, по вашим пожеланиям."
      />
      <ServicesCard
        src={devImg.src}
        alt="devLogo"
        title="Дизайн сайта"
        text="Cоздание дизайн-макета, по вашим пожеланиям."
      />
      <ServicesCard
        src={supportImg.src}
        alt="supportLogo"
        title="Дизайн сайта"
        text="Cоздание дизайн-макета, по вашим пожеланиям."
      />
    </div>
  </div>
</section>

<style>
  section {
    padding: 4rem 0;
    background: linear-gradient(
            to right bottom, 
            var(--c-gradient1) 0%,
            var(--c-gradient1) 50%,
            transparent 50%,
            transparent 100%

            );
  }
  .cards-block {
    display: flex;
    justify-content: space-between;
    gap: 2rem;
  }
  h2 {
    color: white;
    text-align: center;
    
  }
</style>
